<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Srikanta - Products</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f7fa;
        margin: 0;
        padding: 0;
      }

      .container {
        width: 90%;
        margin: auto;
        padding-top: 30px;
      }

      h1 {
        text-align: center;
        margin-bottom: 30px;
      }

      form {
        margin-bottom: 20px;
      }

      select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        margin-top: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
      }

      .card {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
        flex: 0 0 23%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        overflow: hidden;
      }

      .card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }

      .card-body {
        padding: 15px;
      }

      .card-title {
        font-size: 18px;
        margin: 0 0 10px;
      }

      .card-text {
        font-size: 14px;
        color: #555;
        margin-bottom: 15px;
      }

      .btn {
        padding: 10px;
        text-align: center;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
      }

      .btn:hover {
        background-color: #0056b3;
      }

      @media (max-width: 992px) {
        .card {
          flex: 0 0 48%;
        }
      }

      @media (max-width: 600px) {
        .card {
          flex: 0 0 100%;
        }
      }

      .no-data {
        text-align: center;
        font-size: 20px;
        margin-top: 40px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Products</h1>

      <form method="get" action="/filter">
        <label for="category">Filter by Category:</label>
        <select id="category" name="category" onchange="this.form.submit()">
          <option value=" ">All Categories</option>
          <% category.forEach(data => { %>
            <option value="<%= data._id %>"><%= data.name %></option>
          <% }) %>
        </select>
      </form>

      <% if(products.length>0){ %>
      <div class="row">
        <% products.map((data)=>{ %>
        <div class="card">
          <img src="<%= data.image[0] %>" alt="Product Image" />
          <div class="card-body">
            <h5 class="card-title"><%= data.name %></h5>
            <p class="card-text"><%= data.description %></p>
            
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
        <div class="no-data">No data Available</div>
      <% } %>
    </div>
  </body>
</html>

